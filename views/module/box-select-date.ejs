	font-size: 10px;
}
#calendar-top .weekday { 
	font-size: 12px;
}
#calendar-top .start { 
	font-size: 26px;
}
#calendar-top .order { 
	font-size: 22px;
}
#calendar-top .left { 
	float: left; 
	padding-right: 20px;
}
#calendar-top .right { 
	float: left; 
	padding-right: 0;
