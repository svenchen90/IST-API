	content: ""; 
	display: table; 
	clear: both;
}
#calendar-top .end-date { 
	cursor: pointer; 
	margin-top: 10px; 
	height: 60px;
}
#calendar-top .end-date .left { 
	padding-top: 15px; 
	width: 150px; 
	text-align: right;
}
