	text-transform: uppercase; 
	display: block; 
	padding-bottom: 5px;
}
#calendar-top select { 
	font-size: 12px; 
	font-weight: 100; 
	font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif; 
	border: 2.5px solid #ddd; 
	text-transform: uppercase; 
	padding: 5px; 
	width: 210px; 
	margin-bottom: 25px;
}
#calendar-top select option {}
